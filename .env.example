# DB
# Your PostgreSQL connection string from Supabase or other provider.
DATABASE_URL=

# Auth (Clerk)
# Keys obtained from your Clerk application dashboard.
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# URLs Clerk should use for sign-in and sign-up pages.
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup

# QuickBooks Online (QBO) Integration
# Credentials obtained from your Intuit Developer application.
# Used for OAuth 2.0 authentication and API calls.
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
# The URL Intuit will redirect to after OAuth authorization.
# Must match the redirect URI configured in your Intuit app settings.
# Example: http://localhost:3000/api/qbo/callback or https://yourdomain.com/api/qbo/callback
QBO_REDIRECT_URI=
# The QBO environment ('sandbox' or 'production').
QBO_ENVIRONMENT=sandbox
# A secret key used to encrypt QBO tokens stored in the database.
# Generate a strong, unique key (e.g., using `openssl rand -base64 32`).
QBO_ENCRYPTION_KEY=

# Email Service (e.g., Resend)
# API key for your chosen email sending service.
EMAIL_API_KEY=
# The email address emails will be sent from.
EMAIL_FROM_ADDRESS=
# For local development using MailHog/Mailpit (optional):
# Set EMAIL_API_KEY to a dummy value if using SMTP.
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Application Settings
# Default sales tax rate to be applied to estimates (e.g., 0.08 for 8%).
# This can potentially be overridden by a value in the settings table.
DEFAULT_SALES_TAX_RATE=0.00

